{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "128000"
      }
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/asimov/repository/git/obsidian-timestamp-utility"
      ],
      "alwaysAllow": [
        "directory_tree",
        "list_directory",
        "read_multiple_files",
        "edit_file",
        "list_directory_with_sizes",
        "read_text_file"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/inspector",
        "uvx",
        "mcp-server-git",
        "--repository",
        "/home/asimov/repository/git/obsidian-timestamp-utility"
      ]
    },
    "sequentialthinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}